{
    "manifest_version"          : 2
  , "minimum_chrome_version"    : "28"

  , "default_locale"            : "en_US"
  , "name"                      : "__MSG_extensionName__"
  , "description"               : "__MSG_extensionDescription__"
  , "version"                   : "0.1.2.6"

  , "short_name"                : "PoziTone"
  , "author"                    : "PoziWorld"
  , "homepage_url"              : "http://pozitone.com/"

  , "icons"                     : {
        "16"                    : "img/pozitone-icon-16.png"
      , "48"                    : "img/pozitone-icon-48.png"
      , "128"                   : "img/pozitone-icon-128.png"
    }

  , "permissions"               : [
        "*://101.ru/"
      , "*://vk.com/"
      , "*://*.vk.me/"
      , "clipboardWrite"
      , "notifications"
      , "storage"
      , "tabs"
    ]
  , "browser_action"            : {
        "default_icon"          : {
            "19"                : "img/pozitone-icon-19.png"
          , "38"                : "img/pozitone-icon-38.png"
        }
      , "default_title"         : "__MSG_extensionName__"
      , "default_popup"         : "html/browser-action.html"
    }
  , "commands"                  : {
        "add"                   : {
            "suggested_key"     : {
              "default"         : "Alt+Shift+D"
            }
          , "description"       : "Add track to playlist"
        }
      , "favorite"              : {
            "description"       : "I like it!"
        }
      , "next"                  : {
            "description"       : "Next track"
        }
      , "previous"              : {
            "description"       : "Previous track"
        }
      , "playStop"              : {
            "suggested_key"     : {
              "default"         : "Alt+Shift+P"
            }
          , "description"       : "Stop / Play"
        }
      , "muteUnmute"            : {
            "suggested_key"     : {
              "default"         : "Alt+Shift+M"
            }
          , "description"       : "Mute / Unmute"
        }
      , "showNotification"      : {
            "suggested_key"     : {
              "default"         : "Alt+Shift+Q"
            }
          , "description"       : "Show notification"
        }
    }
  , "content_scripts"           : [
        {
            "matches"           : [ "*://101.ru/*" ]
          , "js"                : [ 
                "modules/ru_101/js/uppod-player-api.js"
              , "modules/ru_101/js/page-watcher.js"
            ]
          , "run_at"            : "document_end"
        }
      , {
            "matches"           : [ "*://vk.com/*" ]
          , "js"                : [ 
                "modules/com_vk_audio/js/page-watcher.js"
            ]
          , "run_at"            : "document_end"
        }
    ]
  , "background"                : {
        "persistent"            : false
      , "scripts"               : [
            "js/tracking.js"
          , "js/log.js"
          , "js/bowser.js"
          , "js/global.js"
          , "js/background.js"
        ]
    }
  , "options_page"              : "html/options.html"
}