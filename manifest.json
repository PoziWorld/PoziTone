{
    "manifest_version"          : 2
  , "minimum_chrome_version"    : "28"

  , "default_locale"            : "en_US"
  , "name"                      : "__MSG_extensionName__"
  , "description"               : "__MSG_extensionDescription__"
  , "version"                   : "0.3.5.3"

  , "short_name"                : "PoziTone"
  , "author"                    : "PoziWorld"
  , "homepage_url"              : "https://pozitone.com/"

  , "icons"                     : {
        "16"                    : "img/pozitone-icon-16.png"
      , "48"                    : "img/pozitone-icon-48.png"
      , "128"                   : "img/pozitone-icon-128.png"
    }

  , "permissions"               : [
        "*://101.ru/"
      , "*://*.odnoklassniki.ru/"
      , "*://*.ok.ru/"
      , "*://vk.com/"
      , "*://*.vk.me/"
      , "clipboardWrite"
      , "notifications"
      , "storage"
      , "tabs"
      , "unlimitedStorage"
    ]
  , "browser_action"            : {
        "default_icon"          : {
            "19"                : "img/pozitone-icon-19.png"
          , "38"                : "img/pozitone-icon-38.png"
        }
      , "default_title"         : "__MSG_extensionName__"
      , "default_popup"         : "html/browser-action.html"
    }
  , "commands"                  : {
        "add"                   : {
            "suggested_key"     : {
              "default"         : "Alt+Shift+D"
            }
          , "description"       : "__MSG_optionsSettingsNotificationButtonsAdd__"
        }
      , "favorite"              : {
            "description"       : "__MSG_optionsSettingsNotificationButtonsFavorite__"
        }
      , "next"                  : {
            "description"       : "__MSG_optionsSettingsNotificationButtonsNext__"
        }
      , "previous"              : {
            "description"       : "__MSG_optionsSettingsNotificationButtonsPrevious__"
        }
      , "playStop"              : {
            "suggested_key"     : {
              "default"         : "Alt+Shift+P"
            }
          , "description"       : "__MSG_optionsSettingsNotificationButtonsPlayStop__"
        }
      , "muteUnmute"            : {
            "suggested_key"     : {
              "default"         : "Alt+Shift+M"
            }
          , "description"       : "__MSG_optionsSettingsNotificationButtonsMuteUnmute__"
        }
      , "volumeUp"              : {
            "description"       : "__MSG_notificationButtonsVolumeUpTitle__"
        }
      , "volumeDown"            : {
            "description"       : "__MSG_notificationButtonsVolumeDownTitle__"
        }
      , "showNotification"      : {
            "suggested_key"     : {
              "default"         : "Alt+Shift+Q"
            }
          , "description"       : "__MSG_commandShowNotification__"
        }
    }
  , "content_scripts"           : [
        {
            "matches"           : [ "*://101.ru/*" ]
          , "js"                : [
                "js/const.js"
              , "modules/ru_101/js/uppod-player-api.js"
              , "modules/general/js/page-watcher.js"
              , "modules/ru_101/js/page-watcher.js"
            ]
          , "run_at"            : "document_end"
        }
      , {
            "matches"           : [
                "*://*.odnoklassniki.ru/*"
              , "*://*.ok.ru/*"
            ]
          , "js"                : [
                "js/const.js"
              , "modules/general/js/page-watcher.js"
              , "modules/ru_ok_audio/js/page-watcher.js"
            ]
          , "run_at"            : "document_end"
        }
      , {
            "matches"           : [ "*://vk.com/*" ]
          , "js"                : [
                "js/const.js"
              , "modules/general/js/page-watcher.js"
              , "modules/com_vk_audio/js/page-watcher.js"
            ]
          , "run_at"            : "document_end"
        }
    ]
  , "background"                : {
        "persistent"            : false
      , "scripts"               : [
            "js/tracking.js"
          , "js/bowser.js"
          , "js/const.js"
          , "js/log.js"
          , "js/global.js"
          , "js/background.js"
        ]
    }
  , "options_page"              : "html/options.html"
  , "options_ui"                : {
        "page"                  : "html/options.html"
      , "chrome_style"          : false
    }
}